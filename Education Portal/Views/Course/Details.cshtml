@using System.Security.Claims
@model Education_Portal.ViewModels.CourseDetailViewModel

@{
    ViewData["Title"] = Model.Course.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h1 class="card-title">@Model.Course.Title</h1>
                    <p class="card-text text-muted">@Model.Course.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">Kategori: @Model.Course.Category?.Name</span>
                        <span class="badge bg-warning text-dark">
                            ★ @(Model.Comments.Any() ? Model.Comments.Average(x => x.Rating).ToString("0.0") : "0") / 5
                        </span>
                    </div>
                </div>
            </div>

            <h3 class="mt-4 mb-3 border-bottom pb-2">Ders İçerikleri</h3>
            <div class="list-group mb-5">
                @if (Model.Course.Videos != null && Model.Course.Videos.Any())
                {
                    int sayac = 1;
                    foreach (var video in Model.Course.Videos)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span><strong>Ders @sayac:</strong> @video.Title</span>
                            <a asp-action="Watch" asp-route-id="@video.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-play-circle"></i> İzle
                            </a>
                        </div>
                        sayac++;
                    }
                }
                else
                {
                    <div class="alert alert-warning">Bu kursa henüz video yüklenmemiş.</div>
                }
            </div>

            <h4 class="mb-3">Öğrenci Yorumları (@Model.Comments.Count)</h4>
            <div class="comments-list mb-5" style="max-height: 800px; overflow-y: auto;">
                @if (Model.Comments.Any())
                {
                    foreach (var comment in Model.Comments)
                    {
                        var currentUserIdString = User.FindFirstValue(ClaimTypes.NameIdentifier);
                        int.TryParse(currentUserIdString, out int currentUserId);
                        bool canDelete = User.IsInRole("Admin") || (currentUserId != 0 && currentUserId == comment.UserId);

                        <div class="card mb-3 border-0 shadow-sm bg-light">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between mb-2">
                                    <h6 class="fw-bold mb-0 text-primary">
                                        <i class="fas fa-user-circle"></i> @(comment.User?.FullName ?? "Bilinmeyen Kullanıcı")
                                    </h6>
                                    <small class="text-muted">@comment.Date.ToString("dd.MM.yyyy")</small>
                                </div>
                                <div class="text-warning mb-2">
                                    @for (int i = 0; i < comment.Rating; i++)
                                    {
                                        <span>★</span>
                                    }
                                </div>
                                <p class="card-text small text-secondary">@comment.Content</p>
                                @if (canDelete)
                                {
                                    <div class="d-flex justify-content-end mt-2 border-top pt-2 gap-2">
                                        <a asp-controller="Course" asp-action="EditComment" asp-route-id="@comment.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                        <a asp-controller="Course" asp-action="DeleteComment" asp-route-id="@comment.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu yorumu silmek istediğinizden emin misiniz?');">
                                            <i class="fas fa-trash-alt"></i> Sil
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        Henüz yorum yapılmamış. İlk yorumu sen yap!
                    </div>
                }
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-4 bg-light sticky-top" style="top: 20px; z-index: 1;">
                <div class="card-header bg-warning text-dark fw-bold">
                    Puan Ver & Yorum Yap
                </div>
                <div class="card-body">
                    <form asp-action="AddComment" method="post">
                        <input type="hidden" name="CourseId" value="@Model.CourseId" />
                        <div class="mb-3">
                            <label class="form-label">Puanınız</label>
                            <select asp-for="NewRating" class="form-select">
                                <option value="5">⭐⭐⭐⭐⭐ (Mükemmel)</option>
                                <option value="4">⭐⭐⭐⭐ (İyi)</option>
                                <option value="3">⭐⭐⭐ (Orta)</option>
                                <option value="2">⭐⭐ (Kötü)</option>
                                <option value="1">⭐ (Berbat)</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Yorumunuz</label>
                            <textarea asp-for="NewCommentText" class="form-control" rows="3" placeholder="Düşüncelerinizi yazın..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Yorumu Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>