@model Education_Portal.Models.Video

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_LayoutCourse.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-play-circle me-2"></i>@Model.Title
                    </h5>
                    <a href="/Course/Details/@Model.CourseId" class="btn btn-sm btn-outline-light">
                        <i class="fas fa-arrow-left"></i> Kursa Dön
                    </a>
                </div>
                <div class="card-body p-0 bg-black">
                    <div class="ratio ratio-16x9">
                        <iframe src="@Model.Url" title="@Model.Title" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Bu içerik eğitim amaçlıdır.</small>
                </div>
            </div>
        </div>
    </div>
</div>