@{
    ViewData["Title"] = "Kaydol";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<h3>Yeni Hesap Oluştur</h3>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" style="background-color: rgba(220, 53, 69, 0.9); color: white; border: none;">
        @ViewBag.Error
    </div>
}

<form action="/Account/Register" method="post" autocomplete="off">

    <div class="mb-3">
        <label>Adınız Soyadınız</label>
        <input type="text" name="fullName" class="form-control" required placeholder="Ad Soyad giriniz" />
    </div>

    <div class="mb-3">
        <label>Email Adresi</label>
        <input type="email" name="email" class="form-control" required placeholder="Örn: kullanıcıadı@user.com" />
    </div>

    <div class="mb-3">
        <label>Şifre</label>
        <input type="password" name="password" class="form-control" required autocomplete="new-password" />
    </div>

    <button type="submit" class="btn btn-glass">Kayıt Ol</button>

</form>

<div class="glass-links">
    <a href="/Account/Login">Zaten hesabın var mı? Giriş Yap</a>
</div>