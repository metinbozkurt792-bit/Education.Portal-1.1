@model Education_Portal.Models.Course

@{
    ViewData["Title"] = "Kurs Güncelle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card col-md-6 mx-auto">
    <div class="card-header bg-warning text-dark">
        <h4><i class="fas fa-edit me-2"></i>Kursu Düzenle</h4>
    </div>
    <div class="card-body">
        <form asp-action="UpdateCourse" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label>Kurs Başlığı</label>
                <input type="text" asp-for="Title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Kategori</label>
                <select name="CategoryId" class="form-select" required>
                    <option value="">Seçiniz...</option>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        if (cat.Id == Model.CategoryId)
                        {
                            <option value="@cat.Id" selected>@cat.Name</option>
                        }
                        else
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="mb-3">
                <label>Kurs Ücreti (₺)</label>
                <input type="number" asp-for="Price" class="form-control" step="0.01" min="0" placeholder="0.00" />
                <small class="text-muted">Ücretsiz yapmak için 0 giriniz.</small>
            </div>
            <div class="mb-3">
                <label>Kurs Açıklaması</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a href="/Admin/Courses" class="btn btn-secondary">İptal</a>
                <button type="submit" class="btn btn-warning">Değişiklikleri Kaydet</button>
            </div>

        </form>
    </div>
</div>