@{
    ViewData["Title"] = "Ayarlar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <h4><i class="fas fa-cog me-2"></i>Hesap Ayarları</h4>
            </div>
            <div class="card-body">

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-@ViewBag.Type">
                        @ViewBag.Message
                    </div>
                }

                <h5 class="card-title mb-4">Şifre Değiştir</h5>

                <form asp-action="Settings" method="post">
                    <div class="mb-3">
                        <label>Mevcut Şifreniz</label>
                        <input type="password" name="currentPassword" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label>Yeni Şifre</label>
                        <input type="password" name="newPassword" class="form-control" required minlength="3" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Güncelle</button>
                </form>

            </div>
        </div>
    </div>
</div>