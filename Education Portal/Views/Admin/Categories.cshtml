@model List<Education_Portal.Models.Category>

@{
    ViewData["Title"] = "Kategori Yönetimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Kategoriler</h4>
        <a href="/Admin/AddCategory" class="btn btn-primary">+ Yeni Kategori Ekle</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th style="width: 150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/Admin/UpdateCategory/@item.Id" class="btn btn-sm btn-warning">Düzenle</a>

                            <a href="/Admin/DeleteCategory/@item.Id"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bu kategoriyi silmek istediğine emin misin?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>