@model List<Education_Portal.Models.Course>
@{
    ViewData["Title"] = "Tüm Kurslar";
    Layout = "~/Views/Shared/_LayoutCourse.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Mevcut Kurslar</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body d-flex flex-column">

                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Category?.Name</h6>

                        <p class="card-text flex-grow-1">
                            @{
                                var description = item.Description ?? "";
                            }
                            @(description.Length > 100 ? description.Substring(0, 100) + "..." : description)
                        </p>

                        <div class="mt-auto">
                            <hr class="text-muted" />

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-muted small">Kurs Ücreti:</span>
                                @if (item.Price > 0)
                                {
                                    <span class="h4 mb-0 text-success fw-bold">₺@item.Price</span>
                                }
                                else
                                {
                                    <span class="h4 mb-0 text-success fw-bold">Ücretsiz</span>
                                }
                            </div>

                            <div class="d-grid gap-2">
                                <a href="/Order/Checkout?courseId=@item.Id" class="btn btn-success">
                                    <i class="fas fa-credit-card me-2"></i> Satın Al
                                </a>

                                <a href="/Course/Details/@item.Id" class="btn btn-outline-primary">
                                    Kursu İncele
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>