@model List<Education_Portal.Models.AppUser>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4><i class="fas fa-users me-2"></i>Kullanıcılar</h4>
        <span class="badge bg-secondary">Toplam: @Model.Count</span>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Email Adresi</th>
                    <th>Ad Soyad</th>
                    <th>Yetki (Rol)</th>
                    <th>Durum</th>
                    <th style="width: 250px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td>
                            @if (user.Role == "Admin")
                            {
                                <span class="badge bg-danger">Yönetici</span>
                            }
                            else
                            {
                                <span class="badge bg-primary">Öğrenci</span>
                            }
                        </td>
                        <td>
                            @if (user.BanEndDate != null && user.BanEndDate > DateTime.Now)
                            {
                                <span class="text-danger fw-bold">
                                    <i class="fas fa-ban"></i> Yasaklı
                                </span>
                                <br />
                                <small class="text-muted">Bitiş: @user.BanEndDate?.ToString("dd.MM.yyyy")</small>
                            }
                            else
                            {
                                <span class="text-success"><i class="fas fa-check-circle"></i> Aktif</span>
                            }
                        </td>
                        <td>
                            @if (user.Role != "Admin")
                            {
                                @if (user.BanEndDate != null && user.BanEndDate > DateTime.Now)
                                {
                                    <a href="/Admin/UnbanUser/@user.Id" class="btn btn-sm btn-success">
                                        <i class="fas fa-unlock"></i> Aç
                                    </a>
                                }
                                else
                                {
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-warning dropdown-toggle" data-bs-toggle="dropdown">
                                            <i class="fas fa-gavel"></i> Banla
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="/Admin/BanUser/@user.Id?days=3">3 Gün</a></li>
                                            <li><a class="dropdown-item" href="/Admin/BanUser/@user.Id?days=7">1 Hafta</a></li>
                                            <li><a class="dropdown-item" href="/Admin/BanUser/@user.Id?days=30">1 Ay</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" href="/Admin/BanUser/@user.Id?days=36500">Sınırsız</a></li>
                                        </ul>
                                    </div>
                                }
                                <a asp-controller="Admin"
                                   asp-action="DeleteUser"
                                   asp-route-id="@user.Id"
                                   class="btn btn-sm btn-danger ms-1"
                                   onclick="return confirm('Bu kullanıcıyı tamamen silmek istediğine emin misin?');">
                                    <i class="fas fa-trash"></i> Sil
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>