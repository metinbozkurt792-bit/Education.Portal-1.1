@model List<Education_Portal.Models.Comment>
@{
    ViewData["Title"] = "Yorum Yönetimi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
        <h4><i class="fas fa-comments me-2"></i>Yorumlar</h4>
        <span class="badge bg-dark text-white">Toplam: @Model.Count</span>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 50px;">#</th>
                    <th style="width: 15%;">Kullanıcı</th>
                    <th style="width: 15%;">Video Adı</th>
                    <th>Yorum</th>
                    <th style="width: 120px;">Tarih</th>
                    <th style="width: 100px;">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <span class="fw-bold">@(item.User != null ? item.User.FullName : "Silinmiş Üye")</span>
                        </td>
                        <td>
                            <span class="badge bg-info text-dark">@(item.Video != null ? item.Video.Title : "Video Yok")</span>
                        </td>
                        <td>
                            @item.Content
                        </td>
                        <td>
                            @item.Date.ToString("dd.MM.yyyy HH:mm")
                        </td>
                        <td>
                            <a asp-controller="Admin"
                               asp-action="DeleteComment"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Bu yorumu silmek istediğine emin misin?');">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center">
                Henüz hiç yorum yapılmamış.
            </div>
        }
    </div>
</div>