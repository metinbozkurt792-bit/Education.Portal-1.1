@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol - Eğitim Portalı</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login-box {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }
    </style>
</head>
<body>

    <div class="login-box">
        <h3 class="text-center mb-4">Yeni Hesap Oluştur</h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form action="/Account/Register" method="post" autocomplete="off">
            <div class="mb-3">
                <label>Adınız Soyadınız</label>
                <input type="text" name="fullName" class="form-control" required placeholder=" " />
            </div>
            <div class="mb-3">
                <label>Email Adresi</label>
                <input type="email" name="email" class="form-control" required placeholder="Örn: kullanıcıadı@user.com" />
            </div>

            <div class="mb-3">
                <label>Şifre</label>
                <input type="password" name="password" class="form-control" required autocomplete="new-password" />
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3">Kayıt Ol</button>

            <div class="text-center">
                <a href="/Account/Login" class="text-decoration-none">Zaten hesabın var mı? Giriş Yap</a>
            </div>
        </form>
    </div>

</body>
</html>