@model List<Education_Portal.ViewModels.AdminCourseUserViewModel>

@{
    ViewData["Title"] = "Tüm Kurs Öğrencileri";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark">Öğrenci Hareketleri</h2>
        <p class="text-muted">Satın almalar ve ücretsiz kayıtlar bir arada.</p>
    </div>
    <div class="card bg-primary text-white border-0 shadow-sm px-4 py-2">
        <div class="d-flex align-items-center">
            <i class="fas fa-users fa-2x me-3"></i>
            <div>
                <h5 class="mb-0">@Model.Count</h5>
                <small>Toplam İşlem</small>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Öğrenci</th>
                        <th class="py-3">Kurs</th>
                        <th class="py-3">Tarih</th>
                        <th class="py-3">Tür</th>
                        <th class="pe-4 py-3 text-end">Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center text-primary fw-bold me-3" style="width: 40px; height: 40px;">
                                            @(item.StudentName?.Substring(0, 1).ToUpper())
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.StudentName</div>
                                            <small class="text-muted">@item.StudentEmail</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@item.CourseTitle</td>
                                <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (item.Type == "Satın Alma")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success">Satın Alma</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info bg-opacity-10 text-info">Ücretsiz Kayıt</span>
                                    }
                                </td>
                                <td class="text-end pe-4 fw-bold">
                                    @if (item.Price > 0)
                                    {
                                        <span>₺@item.Price</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">0 ₺</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3 d-block opacity-50"></i>
                                Henüz hiç kayıt veya satış yok.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>