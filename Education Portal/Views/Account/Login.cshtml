@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<h3>Portala Giriş</h3>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" style="background-color: rgba(220, 53, 69, 0.9); color: white; border: none;">
        @ViewBag.Error
    </div>
}

<form action="/Account/Login" method="post" autocomplete="off">

    <div class="mb-3">
        <label>Email Adresi</label>
        <input type="email" name="email" class="form-control" required placeholder="Örn: kullanıcıadı@user.com" />
    </div>

    <div class="mb-3">
        <label>Şifre</label>
        <input type="password" name="password" class="form-control" required autocomplete="new-password" />
    </div>

    <button type="submit" class="btn btn-glass">Giriş Yap</button>

</form>

<div class="glass-links">
    <a href="/Account/Register">Hesabın yok mu? Kayıt Ol</a>
    <br>
    <a href="/Home/Index" style="font-size: 12px; margin-top: 10px; display: inline-block;">Siteye Dön</a>
</div>