@{
    ViewData["Title"] = "Erişim Engellendi";
    Layout = "~/Views/Shared/_LayoutCourse.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="access-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">

                <div class="card border-0 shadow-lg rounded-4 overflow-hidden animate__animated animate__zoomInDown">

                    <div class="card-header bg-white border-0 pt-5 pb-0 text-center">
                        <div class="brand-logo d-inline-flex align-items-center justify-content-center mb-3">
                            <div class="logo-circle shadow">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <h2 class="fw-bold text-dark ms-2 mb-0" style="font-family: 'Segoe UI', sans-serif;">ToAcadem</h2>
                        </div>
                    </div>

                    <div class="card-body p-5 text-center">

                        <div class="mb-4 position-relative d-inline-block">
                            <div class="icon-bg"></div>
                            <i class="fas fa-lock text-danger display-1 position-relative z-1 animate__animated animate__pulse animate__infinite"></i>
                        </div>

                        <h1 class="fw-bold text-danger mb-2">Erişim Reddedildi!</h1>
                        <h4 class="text-secondary mb-3">Hata Kodu: 403</h4>

                        <p class="text-muted mb-4 fs-6">
                            Dur yolcu! ✋ Bu alana girmek için gerekli yetkiye sahip değilsin.
                            Yanlış bir linke tıklamış olabilir misin?
                        </p>

                        <div class="d-grid gap-2">
                            <a href="/Home/Index" class="btn btn-primary rounded-pill py-3 fw-bold shadow-sm animate__animated animate__fadeInUp" style="animation-delay: 0.5s;">
                                <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                            </a>
                            <a href="javascript:history.back()" class="btn btn-outline-secondary rounded-pill py-3 animate__animated animate__fadeInUp" style="animation-delay: 0.7s;">
                                <i class="fas fa-arrow-left me-2"></i>Geri Git
                            </a>
                        </div>
                    </div>

                    <div class="card-footer bg-light border-0 py-3 text-center">
                        <small class="text-muted">ToAcadem Security System &copy; 2025</small>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<style>

    .access-wrapper {
        min-height: 85vh;
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .logo-circle {
        width: 60px;
        height: 60px;
        background: linear-gradient(45deg, #2193b0, #6dd5ed);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
    }

    .icon-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120px;
        height: 120px;
        background-color: rgba(220, 53, 69, 0.1);
        border-radius: 50%;
        z-index: 0;
    }

    .card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
    }
</style>